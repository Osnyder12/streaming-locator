<%= form_with(url: submit_search_path, method: :post, local: true, html: { class: "w-full justify-center flex space-x-0" }) do |form| %>
  <%= form.text_field :search_query, placeholder: 'Search by title, country, etc...', class: 'border-solid w-1/2 rounded-l-md' %>
  <%= form.submit 'Search', class: "border-solid bg-green-600 h-full text-white rounded-r-md w-20" %>
<% end %>